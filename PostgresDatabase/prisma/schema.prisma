
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
model User {
  id     Int     @id @default(autoincrement())
  userid String  @unique
  chips  Int     @default(0)
  room   Room?   @relation("members",fields: [roomId], references: [id])
  roomId Int?
  owner Room? @relation("owner")
}

model Room {
  id       Int    @id @default(autoincrement())
  name     String
  code     Int
  ownedby  String? @unique
  owner    User?   @relation("owner", fields: [ownedby], references: [userid])
  members  User[] @relation("members")
}



